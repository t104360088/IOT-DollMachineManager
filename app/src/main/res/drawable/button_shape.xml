<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape>
        <solid
            android:color="#8B4513" />
        <stroke
            android:width="3dp"
            android:color="#8B4513" />
        <corners
            android:radius="10dp" />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp" />
    </shape>
</item>
<item android:state_pressed="true" >
    <shape>
        <solid
            android:color="#449def" />
        <stroke
            android:width="1dp"
            android:color="#2f6699" />
        <corners
            android:radius="2dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>
</selector>